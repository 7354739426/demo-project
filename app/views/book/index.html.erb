
<table>
<tr>
    <th>Book Name</th>
    <th>Author Id</th>
    <th>Delete Book</th>
</tr>
<% @books.each do |book| %>
<tr>
    <td><%= book.name %></td>
   <td><%= book.author_id %></td>
</tr>
<%end %>
</table>

<br><br>

<table>
<tr>
    <th>Author Name</th>
    <th>Primary Id</th>
    
</tr>
<% @authors.each do |author| %>
<tr>
    <td><%= author.name %></td>
   <td><%= author.id %></td>
</tr>
<%end %>
</table>

<h1>Create New Book</h1>


<%= form_with url: "/", method: :post do |f| %>
   <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
    <p>
        <%= f.label :author %><br>
        <%= f.select(:author_id, Author.all.pluck(:name,:id)) %>
    </p>
  <p>
    <%= f.label :published_at %><br>
    <%= "#{Date.today}" %>
    <%= f.hidden_field :published_at, value: "#{Date.today}" %>
  </p>
  <%= f.submit "Submit" %>
<% end %>   







